<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mydayapplication"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action
                    android:name="android.intent.action.MAIN"
                    android:screenOrientation="portrait" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LandingActivity" />

        <activity android:name=".activity.Landing2Activity" />

        <activity android:name=".activity.Landing3Activity" />

        <activity android:name=".activity.Landing4Activity" />

        <activity android:name=".activity.SetPasscodeActivity" />

        <activity android:name=".activity.MainActivity" />

        <activity android:name=".activity.NewDayActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.MyMoneyActivity"
            android:parentActivityName=".activity.MainActivity" />

        <activity android:name=".activity.RemoveMoneyActivity"
            android:parentActivityName=".activity.MainActivity"/>

        <activity android:name=".activity.AddMoneyActivity"
            android:parentActivityName=".activity.MainActivity"/>

    </application>

</manifest>