<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_logo"
    android:orientation="vertical"
    tools:context=".activity.SplashScreen">


    <ImageView
        android:id="@+id/iv_appLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_app_icon"
        android:contentDescription="@string/img_app_desc"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/txt_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@+id/iv_appLogo"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txt_appQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_appName"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="@string/app_quote"
        android:textColor="#0E1C7A"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_no"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_below="@+id/txt_appQuote"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:indeterminateDrawable="@drawable/splash_circle"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        android:translationY="550dp" />

</RelativeLayout>