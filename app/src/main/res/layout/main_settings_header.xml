<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/main_settings_theme"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/act_main_profilepic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/person_image" />

    <TextView
        android:id="@+id/act_main_profilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Name: NAME HERE"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/act_main_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Email: EMAIL HERE"
        android:textColor="@android:color/holo_blue_dark"/>

